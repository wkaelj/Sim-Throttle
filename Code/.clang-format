# Language
Language: Cpp
BasedOnStyle: LLVM

# braces
BreakBeforeBraces: Allman

TabWidth: 4
IndentWidth: 4
UseTab: Never

ColumnLimit: 80
AlignAfterOpenBracket: false
ContinuationIndentWidth: 4 # indent broken up argument lists
SortIncludes: false

# align stuff
AlignArrayOfStructures: Left
AlignConsecutiveAssignments: Consecutive
AlignEscapedNewlines: Left
AlignTrailingComments: true
AlignAfterOpenBracket: AlwaysBreak
BinPackArguments: false # make sure functions look nice
BinPackParameters: false
PointerAlignment: Right

# shorten blocks to one line
AllowShortCaseLabelsOnASingleLine: true # short switch blocks inline
AllowShortBlocksOnASingleLine: Always # put short blocks on 1 line
AllowShortFunctionsOnASingleLine: true
